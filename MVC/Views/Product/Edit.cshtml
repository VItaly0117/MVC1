@model ProductForm

@{
    ViewData["Title"] = "Edit Product";
    var product = ViewBag.Product as Product;
}

<h1>Edit Product</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <h5>Existing Images</h5>
                @if (product != null && product.Images.Any())
                {
                    <partial name="_EditImages" model="product.Images" />
                }
                else
                {
                    <p>No images uploaded yet.</p>
                }
            </div>

            <div class="form-group mb-3">
                <label asp-for="Images" class="control-label">Upload New Images</label>
                <input asp-for="Images" class="form-control" type="file" multiple />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Tags</label>
                <div class="border p-2" style="max-height: 200px; overflow-y: auto;">
                    @for (var i = 0; i < Model.TagsForm.Items.Count; i++)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="TagsForm.Items[i].Id" />
                            <input type="hidden" asp-for="TagsForm.Items[i].Name" />
                            <input class="form-check-input" type="checkbox" asp-for="TagsForm.Items[i].IsSelected">
                            <label class="form-check-label" asp-for="TagsForm.Items[i].IsSelected">@Model.TagsForm.Items[i].Name</label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).on('click', '.delete-image-btn', function() {
            const imageId = $(this).data('image-id');
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Product/DeleteImage/' + imageId, function() {
                        $('#image-container-' + imageId).remove();
                        Swal.fire('Deleted!', 'The image has been deleted.', 'success');
                    }).fail(function() {
                        Swal.fire('Error!', 'Could not delete the image.', 'error');
                    });
                }
            });
        });
    </script>
}